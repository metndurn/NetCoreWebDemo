@model Entities.Post

@{
    ViewData["Title"] = Model.Name + "İçerik Detayı";
}

<h1>@Model.Name</h1>

<div class="container">
    <hr />
    <div class="row featurette">
        <div class="col-md-7">
            <h2 class="featurette-heading fw-normal lh-1">@Model.Name</h2>
            <p class="lead">@Model.Content</p>
        </div>
        <div class="col-md-5">
            <img src="/Img/@Model.Image" alt="@Model.Name"
                 class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="400" height="400" />
        </div>
    </div>
    <hr class="featurette-divider">
</div>
