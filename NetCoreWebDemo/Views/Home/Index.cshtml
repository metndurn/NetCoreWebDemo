@model HomePageViewModel /*homepageviewnodel den gelen butun istekler anasayfa olarak burada olacak*/
@{
    ViewData["Title"] = "Ana Sayfa";
}

    <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-label="Slide 1" aria-current="true"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3" class=""></button>
        </div>
        <div class="carousel-inner">
           @foreach (var item in Model.Sliders)/*anasayfada ki slider kısmını buraya listeyip gösterdik*/
           {/*resimler ve diger yolları dogru verıldıgınden emın olun*/
            <div class="carousel-item @(item == Model.Sliders.FirstOrDefault() ? "active" : "")">
                <img src="/Img/@item.Image" alt="@item.Name" />
                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>@item.Name</h1>
                        <p>@item.Description</p>
                        <p><a class="btn btn-lg btn-primary" href="@item.Link">İncele</a></p>
                    </div>
                </div>
            </div>
           }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <div class="container marketing mt-5">
        <h2 class="text-center">Bizden Haberler</h2>
    <hr class="featurette-divider">
        <!-- Three columns of text below the carousel -->
        <div class="row text-center">
            @foreach (var item in Model.News)
        {
            <div class="col-lg-4">
                <img src="/Img/@item.Image" alt="" class="bd-placeholder-img rounded-circle" width="140" height="140" />
                <h2>@item.Name</h2>
                <p>@item.Content</p>
                <p><a class="btn btn-secondary" href="/News/Detail/@item.Id">Detayını Gör»</a></p>
            </div>
        }
        </div><!-- /.row -->
        <!-- START THE FEATURETTES -->
    <h2 class="text-center">İçerikler</h2>
        <hr class="featurette-divider">
        @foreach (var item in Model.Posts)
    {
        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">@item.Name</h2>
                <p class="lead">@item.Content</p>
            </div>
            <div class="col-md-5">
                <a href="/Posts/Detail/@item.Id">
                    <img src="/Img/@item.Image" alt="@item.Name" 
                    class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="400" height="400" />
                </a>
            </div>
        </div>
        <hr class="featurette-divider">
    }
    </div>